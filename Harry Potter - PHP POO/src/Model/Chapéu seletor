<?php

class ChapeuSeletor {
    private $casas = ['GrifinÃ³ria', 'Sonserina', 'Corvinal', 'Lufa-Lufa'];


    public function selecionarCasa($aluno) {
        $casa = $this->casas[array_rand($this->casas)];
        echo "Aluno(a) {$aluno} foi selecionado(a) para a casa: <b>{$casa}</b><br>";
    }
}

